<div class="author">
  <h1 class="author-heading">Hi, I am Soufiane.</h1>
  <p class="author-body">Web developer and content creator.</p>
</div>

<img src="/img/window-img.jpg" alt="" class="hero-img" height="380" />

<section class="articles">
  <h2 class="article-heading">Latest Posts</h2>
  <ul class="article-ul">
    <!-- loop 3la data -->
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list-date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>

  <a href="home/?page=<%= nextPage %>" class="pagination"
    >&lt; View Older Posts</a
  >

  <% } %>
</section>
