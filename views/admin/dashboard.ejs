<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button" id="addNew"
    ><i class="ri-add-line"></i> Add New</a
  >
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>

  <li>
    <a href="/post/<%= post._id %>"> <%= post.title %> &nearr; </a>

    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn" id="editBtn">Edit</a>

      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn" id="deleteBtn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
